{
  "version": "1.1.0-beta-*",
  "name": "Tiger.xUnit",
  "title": "Tiger xUnit.net Extensions",
  "description": "A collection of xUnit.net assertions, tailored for Tiger libraries.",
  "authors": [ "cosborn@cimpress.com" ],
  "copyright": "Copyright Â©Cimpress 2016",

  "buildOptions": {
    "debugType": "portable",
    "preserveCompilationContext": true,
    "xmlDoc": true,
    "warningsAsErrors": true,
    "define": [ "TRACE", "CODE_ANALYSIS", "CONTRACTS_FULL", "PLATFORM_DOTNET" ],
    "additionalArguments": [
      "/ruleset:../../Tiger.ruleset",
      "/additionalfile:../../stylecop.json"
    ]
  },
  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE" ],
        "optimize": true
      }
    }
  },

  "dependencies": {
    "Tiger.ErrorTypes": "3.1.0",
    "xunit.assert.source": "2.2.0-beta4-build3444"
  },

  "frameworks": {
    "netstandard1.0": {
      "dependencies": {
        "NETStandard.Library": "1.6.0"
      }
    }
  },

  "packOptions": {
    "releaseNotes": "The `Tiger.xUnit.Source` package has been created, for further customization of assertions.",
    "owners": [ "cosborn@cimpress.com" ],
    "repository": {
      "type": "git",
      "url": "https://mcpstash.cimpress.net/projects/TIGER/repos/xunit"
    },
    "requireLicenseAcceptance": false,
    "developmentDependency": true,  
    "tags": [ "xunit", "assert", "assertion", "option", "either", "result", "try" ],
    "iconUrl": "https://mcpstash.cimpress.net/projects/TIGER/repos/xunit/browse/tiger_logo.png?raw"
  }
}
